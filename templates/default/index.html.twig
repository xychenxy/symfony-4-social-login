
{% extends 'base.html.twig' %}

{% block title %}Hello HelloController!{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">

{% endblock %}

{% block body %}

    <section class="section_page">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="jumbotron text-center">

                        {% if app.user %}
                            <h3>Facebook account</h3>
                            <table class="table table-hover table-bordered">
                                <tbody>
                                    <tr>
                                        <td>ID</td>
                                        <td>{{ content[0] }}</td>
                                    </tr>
                                    <tr>
                                        <td>User Name</td>
                                        <td>{{ app.user.username}}</td>
                                    </tr>
                                    <tr>
                                        <td>First Name</td>
                                        <td>{{ content[1] }}</td>
                                    </tr>
                                    <tr>
                                        <td>Last Name</td>
                                        <td>{{ content[2] }}</td>
                                    </tr>
                                </tbody>
                            </table>




                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}